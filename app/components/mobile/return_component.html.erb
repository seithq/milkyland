<div class="overflow-hidden rounded-md border px-4 py-2">
  <dl data-controller="detail" data-detail-open-value="<%= is_open %>">
    <dt>
      <button type="button" data-action="detail#toggle" class="flex w-full items-center justify-between text-left text-gray-900" aria-controls="<%= record.id %>" aria-expanded="false">
        <span class="text-xs font-semibold leading-6"><%= t("pages.return", id: record.id) %></span>
        <span class="flex h-7 items-center">
          <%= inline_svg_tag "plus-sm.svg", class: "#{ "hidden" if is_open } size-6", data: { detail_target: "opener" } %>
          <%= inline_svg_tag "minus-sm.svg", class: "#{ "hidden" unless is_open } size-6", data: { detail_target: "closer" } %>
        </span>
      </button>
    </dt>
    <dd class="hidden mt-2"
        id="<%= record.id %>"
        data-detail-target="summary"
        data-transition-enter="transition ease-out duration-100"
        data-transition-enter-start="transform opacity-0 scale-95"
        data-transition-enter-end="transform opacity-100 scale-100"
        data-transition-leave="transition ease-in duration-75"
        data-transition-leave-start="transform opacity-100 scale-100"
        data-transition-leave-end="transform opacity-0 scale-95">
      <ul role="list" class="divide-y divide-gray-200">
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Return.human_attribute_name(:id) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= record.id %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Return.human_attribute_name(:created_at) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= l record.created_at, format: :fact %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Return.human_attribute_name(:user_id) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= record.user.name %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Return.human_attribute_name(:storage_id) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= record.storage.name %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Return.human_attribute_name(:order_id) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= record.order_id %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Order.human_attribute_name(:client_id) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= record.order.client.name %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Order.human_attribute_name(:sales_point_id) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= record.order.sales_point.name %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Order.human_attribute_name(:preferred_date) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= l record.order.preferred_date %></span>
        </li>
      </ul>
    </dd>
  </dl>
</div>