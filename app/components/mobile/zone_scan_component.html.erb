<%= tag.li class: "overflow-hidden rounded-md border p-4", data: { controller: "empty-list-item" } do %>
  <dl data-controller="detail" data-detail-open-value="<%= is_open %>">
    <dt>
      <button type="button" data-action="detail#toggle" class="flex w-full items-center justify-between text-left text-gray-900" aria-controls="<%= zone.code %>" aria-expanded="false">
        <span class="text-xs font-semibold leading-6"><%= zone.code %></span>
        <span class="flex h-7 items-center">
          <%= inline_svg_tag "plus-sm.svg", class: "#{ "hidden" if is_open } h-6 w-6", data: { detail_target: "opener" } %>
          <%= inline_svg_tag "minus-sm.svg", class: "#{ "hidden" unless is_open } h-6 w-6", data: { detail_target: "closer" } %>
        </span>
      </button>
    </dt>
    <dd class="hidden mt-2"
        id="<%= zone.code %>"
        data-detail-target="summary"
        data-transition-enter="transition ease-out duration-100"
        data-transition-enter-start="transform opacity-0 scale-95"
        data-transition-enter-end="transform opacity-100 scale-100"
        data-transition-leave="transition ease-in duration-75"
        data-transition-leave-start="transform opacity-100 scale-100"
        data-transition-leave-end="transform opacity-0 scale-95">
      <% unless readonly %>
        <%= hidden_field_tag input_name, zone.send(input_value) %>
      <% end %>
      <ul role="list" class="divide-y divide-gray-200">
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Zone.human_attribute_name(:id) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= zone.id %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Location.human_attribute_name(:storable_type) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= zone.model_name.human count: 1 %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Location.human_attribute_name(:all_boxes_count) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= zone.all_boxes.count %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Location.human_attribute_name(:all_pallets_count) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= zone.all_pallets.count %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Zone.human_attribute_name(:code) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= t("pages.#{ zone.model_name.singular }", index: zone.display_index) %></span>
        </li>
        <%= render Mobile::ScanLocationComponent.new sourceable: zone %>
      </ul>
      <% unless readonly %>
        <div class="flex justify-center">
          <button type="button" data-action="empty-list-item#close" class="text-xs leading-6 font-medium text-red-600 hover:text-red-500">
            <%= t("actions.remove") %>
          </button>
        </div>
      <% end %>
    </dd>
  </dl>
<% end %>