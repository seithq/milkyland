<div class="overflow-hidden rounded-md border px-4 py-2">
  <dl data-controller="detail" data-detail-open-value="<%= is_open %>">
    <dt>
      <button type="button" data-action="detail#toggle" class="flex w-full items-center justify-between text-left text-gray-900" aria-controls="<%= route_sheet.id %>" aria-expanded="false">
        <span class="text-xs font-semibold leading-6"><%= route_sheet.display_label %></span>
        <span class="flex h-7 items-center">
          <%= inline_svg_tag "plus-sm.svg", class: "#{ "hidden" if is_open } size-6", data: { detail_target: "opener" } %>
          <%= inline_svg_tag "minus-sm.svg", class: "#{ "hidden" unless is_open } size-6", data: { detail_target: "closer" } %>
        </span>
      </button>
    </dt>
    <dd class="hidden mt-2"
        id="<%= route_sheet.id %>"
        data-detail-target="summary"
        data-transition-enter="transition ease-out duration-100"
        data-transition-enter-start="transform opacity-0 scale-95"
        data-transition-enter-end="transform opacity-100 scale-100"
        data-transition-leave="transition ease-in duration-75"
        data-transition-leave-start="transform opacity-100 scale-100"
        data-transition-leave-end="transform opacity-0 scale-95">
      <ul role="list" class="divide-y divide-gray-200">
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= RouteSheet.human_attribute_name(:id) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= route_sheet.id %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= Shipment.human_attribute_name(:shipping_date) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= l route_sheet.shipment.shipping_date %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= RouteSheet.human_attribute_name(:vehicle_plate_number) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= route_sheet.vehicle_plate_number %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= RouteSheet.human_attribute_name(:driver_name) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= route_sheet.driver_name %></span>
        </li>
        <li class="py-2 flex justify-between">
          <span class="text-xs font-medium text-gray-700"><%= RouteSheet.human_attribute_name(:driver_phone_number) %></span>
          <span class="text-xs font-semibold text-gray-900"><%= route_sheet.driver_phone_number %></span>
        </li>
      </ul>
    </dd>
  </dl>
</div>