<li class="py-2" data-controller="detail" data-detail-open-value="false">
  <div class="flex justify-between text-gray-900">
    <div class="flex space-x-1 items-center">
      <div class="flex justify-center text-xs font-semibold text-gray-900">
        <button type="button" data-action="detail#toggle">
          <span class="flex items-center">
            <%= inline_svg_tag "chevron-down.svg", class: "size-4", data: { detail_target: "opener" } %>
            <%= inline_svg_tag "chevron-up.svg", class: "hidden size-4", data: { detail_target: "closer" } %>
          </span>
        </button>
      </div>
      <span class="text-xs font-medium"><%= title %></span>
    </div>
    <span class="text-xs font-semibold"><%= number_with_delimiter count %></span>
  </div>
  <ul role="list" class="pl-1 hidden divide-y divide-gray-200"
      data-detail-target="summary"
      data-transition-enter="transition ease-out duration-100"
      data-transition-enter-start="transform opacity-0 scale-95"
      data-transition-enter-end="transform opacity-100 scale-100"
      data-transition-leave="transition ease-in duration-75"
      data-transition-leave-start="transform opacity-100 scale-100"
      data-transition-leave-end="transform opacity-0 scale-95">
    <%= content %>
  </ul>
</li>