<li class="relative flex items-center space-x-4 py-4">
  <div class="min-w-0 flex-auto">
    <div class="flex items-center gap-x-3">
      <div class="flex-none rounded-full p-1 <%= icon_class %>">
        <div class="size-2 rounded-full bg-current"></div>
      </div>
      <h2 class="min-w-0 text-sm/6 font-semibold text-gray-900">
        <%= link_to edit_url, class: "flex gap-x-2", data: { turbo_frame: "_top" } do %>
          <span class="truncate"><%= @machinery.material_asset.name %></span>
          <span class="text-gray-400">/</span>
          <span class="whitespace-nowrap"><%= @machinery.count %></span>
          <span class="absolute inset-0"></span>
        <% end %>
      </h2>
    </div>
    <div class="mt-3 flex items-center gap-x-2 text-xs/5 text-gray-400">
      <p class="truncate"><%= l @machinery.start_time, format: :fact %></p>
      <span class="text-gray-400">/</span>
      <p class="whitespace-nowrap"><%= l @machinery.end_time, format: :fact %></p>
    </div>
  </div>
  <div class="flex flex-col space-y-1">
    <div class="flex-none rounded-full bg-indigo-400/10 px-2 py-1 text-xs font-medium text-indigo-600 ring-1 ring-inset ring-indigo-400/30"><%= t("tables.cols.plan_performance_with", value: number_with_delimiter(@plan_performance)) %></div>
    <div class="flex-none rounded-full px-2 py-1 text-xs font-medium ring-1 ring-inset <%= badge_class %>"><%= t("tables.cols.fact_performance_with", value: number_with_delimiter(@fact_performance)) %></div>
  </div>
  <svg class="size-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
    <path fill-rule="evenodd" d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd"/>
  </svg>
</li>