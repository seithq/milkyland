            <p class="text-gray-500">8 Members</p>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <div class="flex justify-center">
    <%= button_to t("actions.sign_out"), session_path, class: "text-md leading-6 font-medium text-red-600 hover:text-red-500", method: :delete, data: { turbo_action: :replace, turbo_confirm: t("actions.confirm") } %>
  </div>
</div>