<% content_for(:turbo_native_title) { t("pages.assemblies") } %>

<div class="turbo-native:hidden">
  <%= link_to t("actions.create"), new_load_assembly_path, data: { controller: "bridge--button", bridge_image: "", bridge_side: "right" } %>
</div>

<div class="p-4">
  <% if @assemblies.any? %>
    <ul role="list" id="collection" class="divide-y divide-gray-100 overflow-hidden bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl">
      <%= render @assemblies %>
    </ul>
    <%= render Mobile::PaginationComponent.new pagy: @pagy %>
  <% else %>
    <%= render Mobile::EmptyCollectionComponent.new icon_name: "plus.svg", text: t("actions.create_record"), path: new_load_assembly_path %>
  <% end %>
</div>