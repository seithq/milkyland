<%= turbo_frame_tag dom_id(@waybill, :qr_scans) do %>
  <%= render "progress" %>
  <ul role="list" class="mt-4 space-y-3"
      id="waybill_qr_scans"
      data-controller="scan-preview"
      data-scan-preview-preview-url-value="<%= waybills_qr_scans_url(@waybill) %>"
      data-scan-preview-whitelist-value="<%= @allowed_prefixes %>">
    <% if @qr_scans.any? %>
      <%= render Mobile::QrScanComponent.with_collection(@qr_scans, is_open: false, readonly: params[:readonly].present?) %>
    <% else %>
      <%= render "placeholder" %>
    <% end %>
  </ul>
<% end %>
