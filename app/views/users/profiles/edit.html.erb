<% content_for(:title) { @user.name } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: edit_user_profile_path(@user), title: @user.name),
    ]
  } %>
<% end %>

<div class="flex flex-col justify-center px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with model: @user, url: user_profile_path(@user), class: "space-y-4" do |form| %>
      <div>
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, autocomplete: "name", autofocus: true, required: true, class: "form-input" %>
      </div>

      <div>
        <%= form.label :email_address, class: "form-label" %>
        <%= form.email_field :email_address, required: true, autocomplete: "email-address", class: "form-input" %>
      </div>

      <div>
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, autocomplete: "new-password", maxlength: 72, class: "form-input" %>
      </div>

      <%= form.submit t("actions.save_record"), class: "btn" %>
    <% end %>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= render "users/transfer", user: @user %>
  </div>
</div>
