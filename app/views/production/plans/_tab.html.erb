<% tab_links = [
  NavLink.new(path: production_plans_path(kind: @kind, status: :active), title: t("pages.status_active"), is_active: @status == "active"),
  NavLink.new(path: production_plans_path(kind: @kind, status: :completed), title: t("pages.status_completed"), is_active: @status == "completed"),
]
%>

<nav class="isolate flex divide-x divide-gray-200 rounded-lg shadow" aria-label="Tabs">
  <% tab_links.each_with_index do |link, i| %>
    <%= link_to link.path, class: "group relative min-w-0 flex-1 overflow-hidden bg-white px-4 py-4 text-center text-sm font-medium hover:bg-gray-50 focus:z-10 #{ i == 0 ? "rounded-l-lg" : "rounded-r-lg" } #{ link.is_active ? "text-gray-900" : "text-gray-500 hover:text-gray-700" }" do %>
      <span><%= link.title %></span>
      <span aria-hidden="true" class="absolute inset-x-0 bottom-0 h-0.5 <%= link.is_active ? "bg-indigo-500" : "bg-transparent" %>"></span>
    <% end %>
  <% end %>
</nav>