<% content_for(:title) { @step.operation.name } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: production_plans_path(kind: @plan.kind), title: t("pages.production_plans")),
      NavLink.new(path: production_plan_path(@plan), title: t("pages.production_plan", date: l(@plan.production_date))),
      NavLink.new(path: production_plan_unit_path(@plan, @production_unit), title: @production_unit.group.name),
      NavLink.new(path: production_plan_unit_batch_journal_path(@plan, @production_unit, @batch, @step.operation.journal), title: t("pages.batch", id: @batch.id)),
      NavLink.new(path: edit_production_plan_unit_batch_step_path(@plan, @production_unit, @batch, @step, cancel: params[:cancel]), title: @step.operation.name),
    ]
  } %>
<% end %>

<%= render "form", step: @step %>