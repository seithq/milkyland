<% path = production_plan_unit_batch_journal_path(@plan, @production_unit, @batch, journal) %>

<li class="relative pb-10">
  <% if @batch.completed_journal? journal %>
    <div class="absolute left-4 -top-12 -ml-px mb-0.5 h-full w-0.5 bg-indigo-600" aria-hidden="true"></div>
    <%= link_to path, data: { turbo_frame: "_top" }, class: "group relative flex items-center" do %>
      <span class="flex h-9 items-center">
        <span class="relative z-10 flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600 group-hover:bg-indigo-800">
          <%= inline_svg_tag "step-complete.svg", class: "h-5 w-5 text-white" %>
        </span>
      </span>
      <span class="ml-4 flex min-w-0 flex-col">
        <span class="text-sm sm:text-xl font-medium text-gray-900"><%= journal.name %></span>
      </span>
    <% end %>
  <% elsif @journal&.id == journal.id %>
    <div class="absolute left-4 -top-12 -ml-px mb-0.5 h-full w-0.5 bg-gray-300" aria-hidden="true"></div>
    <%= link_to path, data: { turbo_frame: "_top" }, class: "group relative flex items-center" do %>
      <span class="flex h-9 items-center" aria-hidden="true">
        <span class="relative z-10 flex h-8 w-8 items-center justify-center rounded-full border-2 border-indigo-600 bg-white">
          <span class="h-2.5 w-2.5 rounded-full bg-indigo-600"></span>
        </span>
      </span>
      <span class="ml-4 flex min-w-0 flex-col">
        <span class="text-sm sm:text-xl font-medium text-indigo-600"><%= journal.name %></span>
      </span>
    <% end %>
  <% else %>
    <div class="absolute left-4 -top-12 -ml-px mb-0.5 h-full w-0.5 bg-gray-300" aria-hidden="true"></div>
    <%= link_to path, data: { turbo_frame: "_top" }, class: "group relative flex items-center" do %>
      <span class="flex h-9 items-center" aria-hidden="true">
        <span class="relative z-10 flex h-8 w-8 items-center justify-center rounded-full border-2 border-gray-300 bg-white group-hover:border-gray-400">
          <span class="h-2.5 w-2.5 rounded-full bg-transparent group-hover:bg-gray-300"></span>
        </span>
      </span>
      <span class="ml-4 flex min-w-0 flex-col">
        <span class="text-sm sm:text-xl font-medium text-gray-500"><%= journal.name %></span>
      </span>
    <% end %>
  <% end %>
</li>