<div class="flow-root">
  <div class="-my-2 overflow-x-auto">
    <div class="inline-block min-w-full py-2 align-middle px-2">
      <table class="min-w-full divide-y divide-gray-300">
        <thead>
        <tr>
          <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0"><%= t("tables.cols.product") %></th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t("tables.cols.region") %></th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t("tables.cols.plan") %></th>
        </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
        <% @packing.planned_products_count.each do |info| %>
          <tr>
            <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
              <%= info[:product].name %>
            </td>
            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">
              <%= info[:region].name %>
            </td>
            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">
              <%= number_with_delimiter info[:count] %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>