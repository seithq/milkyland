<div class="flow-root">
  <div class="-my-2 overflow-x-auto">
    <div class="inline-block min-w-full py-2 align-middle px-2">
      <table class="min-w-full divide-y divide-gray-300">
        <thead>
        <tr>
          <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0"><%= t("tables.cols.title") %></th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t("tables.cols.container") %></th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t("tables.cols.start_time") %></th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t("tables.cols.end_time") %></th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t("tables.cols.count") %></th>
        </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
        <% @packing.machineries.each do |machinery| %>
          <tr id=<%= dom_id(machinery) %>>
            <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-900 sm:pl-0">
              <%= machinery.packing_machine.name %>
            </td>
            <td class="whitespace-nowrap px-3 py-4 font-medium text-sm text-gray-900">
              <%= machinery.material_asset.name %>
            </td>
            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">
              <%= l machinery.start_time, format: :fact %>
            </td>
            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">
              <%= l machinery.end_time, format: :fact %>
            </td>
            <td class="whitespace-nowrap px-3 py-4 text-sm font-medium text-gray-700">
              <%= number_with_delimiter machinery.count %>
            </td>
            <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>