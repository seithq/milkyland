<div>
  <div class="flex justify-between">
    <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900"><%= batch.production_unit.group.name %></h1>
    <%= render "production/plans/production_units/batches/action", batch: batch %>
  </div>
  <div class="mt-6 space-y-4" aria-hidden="true">
    <div class="overflow-hidden rounded-full bg-gray-200">
      <div class="h-2 rounded-full bg-indigo-600" style="width: <%= batch.progress %>%"></div>
    </div>
    <div class="flex justify-end text-lg font-medium text-gray-600">
      <div class="text-indigo-600"><%= number_to_percentage batch.progress %></div>
    </div>
  </div>
</div>