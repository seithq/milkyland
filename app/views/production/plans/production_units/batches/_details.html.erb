<div class="relative" data-controller="detail" data-detail-open-value="false">
  <button type="button" data-action="detail#toggle" class="inline-flex items-center gap-x-1 text-gray-900" aria-expanded="false">
    <span class="text-3xl font-bold leading-tight tracking-tight"><%= batch.production_unit.group.name %></span>
    <%= inline_svg_tag "plus-sm.svg", class: "size-8", data: { detail_target: "opener" } %>
    <%= inline_svg_tag "minus-sm.svg", class: "hidden size-8", data: { detail_target: "closer" } %>
  </button>
  <div class="hidden absolute z-20 mt-5 flex w-screen max-w-max"
       data-detail-target="summary"
       data-transition-enter="transition ease-out duration-200"
       data-transition-enter-start="opacity-0 translate-y-1"
       data-transition-enter-end="opacity-100 translate-y-0"
       data-transition-leave="transition ease-in duration-150"
       data-transition-leave-start="opacity-100 translate-y-0"
       data-transition-leave-end="opacity-0 translate-y-1">
    <div class="w-screen max-w-sm flex-auto rounded-xl bg-white p-2 text-sm/6 shadow-lg ring-1 ring-gray-900/5">
      <div class="relative rounded-lg p-2 hover:bg-gray-50">
        <span class="font-semibold text-gray-900"><%= Batch.human_attribute_name(:work_shift) %></span>
        <p class="mt-1 text-gray-600"><%= Batch.enum_to_s(:work_shift, batch.work_shift) %></p>
      </div>
      <div class="relative rounded-lg p-2 hover:bg-gray-50">
        <span class="font-semibold text-gray-900"><%= Batch.human_attribute_name(:storage_id) %></span>
        <p class="mt-1 text-gray-600"><%= batch.storage.name %></p>
      </div>
      <div class="relative rounded-lg p-2 hover:bg-gray-50">
        <span class="font-semibold text-gray-900"><%= Batch.human_attribute_name(:machiner_id) %></span>
        <p class="mt-1 text-gray-600"><%= batch.machiner.name %></p>
      </div>
      <div class="relative rounded-lg p-2 hover:bg-gray-50">
        <span class="font-semibold text-gray-900"><%= Batch.human_attribute_name(:tester_id) %></span>
        <p class="mt-1 text-gray-600"><%= batch.tester.name %></p>
      </div>
      <div class="relative rounded-lg p-2 hover:bg-gray-50">
        <span class="font-semibold text-gray-900"><%= Batch.human_attribute_name(:loader_id) %></span>
        <p class="mt-1 text-gray-600"><%= batch.loader.name %></p>
      </div>
      <% if batch.comment? %>
        <div class="relative rounded-lg p-2 hover:bg-gray-50">
          <span class="font-semibold text-gray-900"><%= Batch.human_attribute_name(:comment) %></span>
          <p class="mt-1 text-gray-600"><%= batch.comment %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>