<div class="relative flex items-center space-x-3 rounded-lg border-2 border-indigo-600 bg-white px-6 py-5 shadow-sm focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:border-indigo-500">
  <div class="min-w-0 flex-1">
    <%= link_to production_plan_unit_batch_path(@plan, @production_unit, batch), class: "focus:outline-none", data: { turbo_frame: "_top" } do %>
      <p class="text-xl font-semibold text-gray-900"><%= t("pages.batch", id: batch.id) %></p>
      <div class="mt-4 flex flex-col space-y-1">
        <div class="flex justify-between text-md">
          <span class="font-medium text-gray-500"><%= t("tables.cols.tonnage") %></span>
          <span class="font-semibold text-gray-700"><%= batch.produced_tonnage %></span>
        </div>
        <div class="flex justify-between text-md">
          <span class="font-medium text-gray-500"><%= t("tables.cols.count") %></span>
          <span class="font-semibold text-gray-700"><%= number_with_delimiter batch.produced_sum %></span>
        </div>
        <div class="flex justify-between text-md">
          <span class="font-medium text-gray-500"><%= t("tables.cols.status") %></span>
          <span class="font-semibold text-gray-700"><%= Batch.enum_to_s(:statuses, batch.status) %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>