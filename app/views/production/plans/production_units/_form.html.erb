<div class="flex flex-col justify-center px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= render "layouts/error_messages", resource: production_unit %>
    <%= form_with model: production_unit, url: production_plan_unit_path(@plan, production_unit), class: "space-y-4" do |form| %>
      <% if should_cancel? %>
        <%= form.hidden_field :status, value: :cancelled %>
      <% end %>

      <div>
        <%= form.label :comment, class: "form-label" %>
        <%= form.text_area :comment, autocomplete: "comment", autofocus: true, required: true, class: "form-input" %>
      </div>

      <% if should_cancel? %>
        <%= form.submit t("actions.force_finish"), class: "btn-danger", data: { turbo_confirm: t("actions.confirm") } %>
      <% else %>
        <%= form.submit t("actions.save_record"), class: "btn" %>
      <% end %>
    <% end %>
  </div>
</div>