<div class="mt-6 space-y-4 sm:space-y-0 sm:space-x-4 grid grid-cols-1 sm:grid-cols-2">
  <div>
    <h3 class="text-base font-semibold leading-6 text-gray-900"><%= t("forms.plan_label") %></h3>
    <dl class="mt-5 grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500"><%= t("tables.cols.tonnage") %></dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= number_with_delimiter production_unit.tonnage %></dd>
      </div>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500"><%= t("tables.cols.count") %></dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= number_with_delimiter production_unit.count %></dd>
      </div>
    </dl>
  </div>
  <div>
    <h3 class="text-base font-semibold leading-6 text-gray-900"><%= t("forms.fact_label") %></h3>
    <dl class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-2">
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500"><%= t("tables.cols.tonnage") %></dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= number_with_delimiter production_unit.produced_tonnage %></dd>
      </div>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500"><%= t("tables.cols.count") %></dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= number_with_delimiter production_unit.produced_count %></dd>
      </div>
    </dl>
  </div>
</div>
<div class="mt-8 flow-root">
  <h3 class="text-base font-semibold leading-6 text-gray-900"><%= t("forms.recipe") %></h3>
  <div class="-mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <table class="min-w-full divide-y divide-gray-300">
        <thead>
        <tr>
          <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0"><%= t("tables.cols.raw_product") %></th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t("tables.cols.plan") %></th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t("tables.cols.fact") %></th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= t("tables.cols.leftover") %></th>
        </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
        <%= render partial: "ingredient", collection: production_unit.group.ingredients, as: :ingredient %>
        </tbody>
      </table>
    </div>
  </div>
</div>