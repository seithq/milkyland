<div class="mt-6 space-y-4">
  <div>
    <h3 class="text-base font-semibold leading-6 text-gray-900"><%= t("forms.plan_label") %></h3>
    <dl class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-2">
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500"><%= t("tables.cols.tonnage") %></dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= number_with_delimiter production_unit.tonnage %></dd>
      </div>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500"><%= t("tables.cols.count") %></dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= number_with_delimiter production_unit.count %></dd>
      </div>
    </dl>
  </div>

  <div>
    <h3 class="text-base font-semibold leading-6 text-gray-900"><%= t("forms.fact_label") %></h3>
    <dl class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-2">
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500"><%= t("tables.cols.tonnage") %></dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= number_with_delimiter production_unit.produced_tonnage %></dd>
      </div>
      <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
        <dt class="truncate text-sm font-medium text-gray-500"><%= t("tables.cols.count") %></dt>
        <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= number_with_delimiter production_unit.produced_count %></dd>
      </div>
    </dl>
  </div>
</div>