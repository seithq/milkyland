<% tab_links = [
  NavLink.new(path: supply_orders_path, title: t("pages.supply_orders"), is_active: true),
  NavLink.new(path: root_path, title: t("pages.supply_operations"), is_active: false),
  NavLink.new(path: root_path, title: t("pages.supply_leftovers"), is_active: false)
]
%>

<div>
  <div class="sm:hidden">
    <%= mobile_tab_select tab_links %>
  </div>
  <div class="hidden sm:block">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <% tab_links.each do |link| %>
          <%= link_to link.title, link.path, class: "tab-link #{ "tab-link-active" if link.is_active }" %>
        <% end %>
      </nav>
    </div>
  </div>
</div>