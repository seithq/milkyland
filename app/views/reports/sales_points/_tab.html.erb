<% tab_links = [
  NavLink.new(path: reports_sales_channel_path, title: t("pages.report_sales_channels"), is_active: false),
  NavLink.new(path: reports_client_path, title: t("pages.report_clients"), is_active: false),
  NavLink.new(path: reports_sales_point_path, title: t("pages.report_sales_points"), is_active: true),
]
%>

<div>
  <div class="sm:hidden">
    <%= mobile_tab_select tab_links %>
  </div>
  <div class="hidden sm:block">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <% tab_links.each do |link| %>
          <%= link_to link.title, link.path, class: "tab-link #{ "tab-link-active" if link.is_active }" %>
        <% end %>
      </nav>
    </div>
  </div>
</div>