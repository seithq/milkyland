<% keys = product.split("@") %>
<% _, product_name = keys.first, keys.second %>
<tr data-id="<%= group_id %>" class="divide-x divide-gray-200 bg-gray-50">
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-xs font-semibold text-gray-700">
    <%= product_name %>
  </td>
  <% @all_months.each do |month| %>
    <!--MONTH-->
    <% has_data = months[month].present? %>
    <!--RETURNS-->
    <td class="whitespace-nowrap px-3 py-4 font-semibold text-xs text-gray-700 text-right">
      <%= number_with_delimiter has_data ? months[month][:return_total_tonnage] : 0.0 %>
    </td>
    <td class="whitespace-nowrap px-3 py-4 font-semibold text-xs text-gray-700 text-right">
      <%= number_with_delimiter has_data ? months[month][:return_total_count] : 0 %>
    </td>
    <!--SALES-->
    <td class="whitespace-nowrap px-3 py-4 font-semibold text-xs text-gray-700 text-right">
      <%= number_with_delimiter has_data ? months[month][:total_tonnage] : 0.0 %>
    </td>
    <td class="whitespace-nowrap px-3 py-4 font-semibold text-xs text-gray-700 text-right">
      <%= number_with_delimiter has_data ? months[month][:total_count] : 0 %>
    </td>
  <% end %>
</tr>