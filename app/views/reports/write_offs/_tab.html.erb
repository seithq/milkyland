<% tab_links = [
  NavLink.new(path: reports_arrival_path, title: t("pages.report_arrivals"), is_active: false),
  NavLink.new(path: reports_transfer_path, title: t("pages.report_transfers"), is_active: false),
  NavLink.new(path: reports_write_off_path, title: t("pages.report_write_offs"), is_active: true),
  NavLink.new(path: reports_product_leftover_path, title: t("pages.product_leftovers"), is_active: false),
  NavLink.new(path: reports_material_asset_leftover_path, title: t("pages.material_asset_leftovers"), is_active: false),
]
%>

<div>
  <div class="sm:hidden">
    <%= mobile_tab_select tab_links %>
  </div>
  <div class="hidden sm:block">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <% tab_links.each do |link| %>
          <%= link_to link.title, link.path, class: "tab-link #{ "tab-link-active" if link.is_active }" %>
        <% end %>
      </nav>
    </div>
  </div>
</div>