<div class="flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <div class="overflow-hidden rounded-lg border">
        <table class="min-w-full divide-y divide-gray-300" id="report-table">
          <thead class="divide-y divide-gray-300">
          <tr class="divide-x divide-gray-200">
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-xs font-semibold text-gray-900"></th>
            <% @channels.each do |channel| %>
              <th scope="col" colspan="8" class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 text-center bg-gray-100"><%= channel.name %></th>
            <% end %>
            <th scope="col" colspan="8" class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 text-center uppercase bg-gray-100"><%= t("tables.cols.summary") %></th>
          </tr>
          <tr class="divide-x divide-gray-200">
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-xs font-semibold text-gray-900"></th>
            <% (@channels.size + 1).times do %>
              <th scope="col" colspan="3" class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 text-center uppercase bg-green-200"><%= t("tables.cols.plan") %></th>
              <th scope="col" colspan="3" class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 text-center uppercase bg-blue-200"><%= t("tables.cols.fact") %></th>
              <th scope="col" colspan="2" class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 text-center uppercase bg-gray-100"><%= t("tables.cols.deviation") %></th>
            <% end %>
          </tr>
          <tr class="divide-x divide-gray-200">
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-xs font-semibold text-gray-900"></th>
            <% (@channels.size + 1).times do %>
              <% 2.times do %>
                <th scope="col" class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 text-right"><%= t("tables.cols.count_full") %></th>
                <th scope="col" class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 text-right"><%= t("tables.cols.sum") %></th>
                <th scope="col" class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 text-right"><%= t("tables.cols.tonnage") %></th>
              <% end %>
              <th scope="col" class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 text-right"><%= t("tables.cols.deviation_absolute") %></th>
              <th scope="col" class="px-3 py-3.5 text-left text-xs font-semibold text-gray-900 text-right"><%= t("tables.cols.deviation_percent") %></th>
            <% end %>
          </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
          <%= render partial: "group", collection: @groups, as: :group %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
