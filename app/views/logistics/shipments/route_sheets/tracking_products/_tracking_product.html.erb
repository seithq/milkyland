<%= tag.div id: dom_id(tracking_product), class: "table-row hover:bg-gray-50" do %>
  <div class="table-cell whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
    <%= tracking_product.product.article %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= tracking_product.product.name %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= number_with_delimiter tracking_product.count %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= number_with_delimiter tracking_product.unrestricted_count %>
  </div>
  <div class="table-cell relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
    <div class="flex justify-end space-x-2">
      <% if allowed_to?(:edit?, tracking_product) %>
        <%= link_to t("actions.edit_record"), edit_shipment_route_sheet_tracking_product_path(@shipment, @route_sheet, tracking_product), data: { turbo_frame: "_top" }, class: "edit_tracking_product text-indigo-600 hover:text-indigo-900" %>
      <% else %>
        <%= link_to t("actions.show_record"), shipment_route_sheet_tracking_product_path(@shipment, @route_sheet, tracking_product), data: { turbo_frame: "_top" }, class: "text-indigo-600 hover:text-indigo-900" %>
      <% end %>
      <% if allowed_to?(:destroy?, tracking_product) %>
        <%= link_to t("actions.destroy_record"), shipment_route_sheet_tracking_product_path(@shipment, @route_sheet, tracking_product), data: { turbo_frame: dom_id(@route_sheet, :tracking_products), turbo_method: :delete, turbo_confirm: t("actions.confirm") }, class: "destroy_tracking_product text-red-600 hover:text-red-500" %>
      <% end %>
    </div>
  </div>
<% end %>
