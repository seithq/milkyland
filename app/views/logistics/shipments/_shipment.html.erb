<div class="table-row">
  <div class="table-cell w-full max-w-0 py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:w-auto sm:max-w-none sm:pl-0">
    <%= link_to shipment.id, shipment_path(shipment), class: "text-indigo-600 hover:text-indigo-900" %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= l shipment.shipping_date %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= Shipment.enum_to_s(:kind, shipment.kind) %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= l shipment.plan.production_date if shipment.plan.present? %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= shipment.region.name %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= shipment.client.name if shipment.client.present? %>
  </div>
  <div class="table-cell py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
    <% unless shipment.completed? %>
      <%= link_to t("actions.edit_record"), edit_shipment_path(shipment), class: "text-indigo-600 hover:text-indigo-900" %>
    <% else %>
      <%= link_to t("actions.show_record"), shipment_path(shipment), class: "text-indigo-600 hover:text-indigo-900" %>
    <% end %>
  </div>
</div>