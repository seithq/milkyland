<div class="table-row">
  <div class="table-cell w-full max-w-0 py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:w-auto sm:max-w-none sm:pl-0">
    <%= link_to record.id, return_path(record), class: "text-indigo-600 hover:text-indigo-900" %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= record.user.name %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= t("pages.tracking_order", id: record.order.id) %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= record.storage.name %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= l record.created_at, format: :long %>
  </div>
  <div class="table-cell py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
    <% if allowed_to?(:update?, record) %>
      <%= link_to t("actions.edit_record"), edit_return_path(record), class: "text-indigo-600 hover:text-indigo-900" %>
    <% else %>
      <%= link_to t("actions.show_record"), return_path(record), class: "text-indigo-600 hover:text-indigo-900" %>
    <% end %>
  </div>
</div>