<%= tag.div id: dom_id(qr_scan), class: "table-row hover:bg-gray-50" do %>
  <div class="table-cell whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
    <%= qr_scan.code %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= qr_scan.sourceable.model_name.human %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= qr_scan.box.code %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= qr_scan.capacity_before %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-900 font-medium">
    <%= link_to qr_scan.capacity_after, edit_waybill_qr_scan_path(@waybill, qr_scan), class: "text-indigo-600", data: { turbo_frame: "_top" } %>
  </div>
<% end %>
