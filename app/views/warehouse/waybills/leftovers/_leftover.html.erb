<%= tag.div id: dom_id(leftover), class: "table-row hover:bg-gray-50" do %>
  <div class="table-cell whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
    <%= leftover.subject.article %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= leftover.subject.name %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= link_to leftover.storage.name, storage_path(leftover.storage), class: "text-indigo-600", target: "_blank" %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-900 font-medium">
    <%= number_with_delimiter leftover.count %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= leftover.subject.measurement.unit %>
  </div>
<% end %>
