<%= tag.div id: dom_id(warehouser), class: "table-row hover:bg-gray-50" do %>
  <div class="table-cell whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
    <span class="font-medium text-gray-900 <%= "line-through" unless warehouser.active? %>"><%= warehouser.user.name %></span>
  </div>
  <div class="table-cell px-3 py-3.5 text-left text-sm text-gray-900">
    <%= warehouser.user.email_address %>
  </div>
  <div class="table-cell px-3 py-3.5 text-left text-sm text-gray-900">
    <%= Warehouser.enum_to_s(:duty, warehouser.duty) %>
  </div>
  <% unless @readonly %>
    <div class="table-cell relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
      <div class="flex justify-end space-x-2">
        <%= link_to t("actions.edit_record"), edit_storage_warehouser_path(@storage, warehouser), data: { turbo_frame: "_top" }, class: "edit_warehouser text-indigo-600 hover:text-indigo-900" %>
        <% if warehouser.active? %>
          <%= link_to t("actions.destroy_record"), storage_warehouser_path(@storage, warehouser), data: { turbo_frame: "_top", turbo_method: :delete, turbo_confirm: t("actions.confirm") }, class: "destroy_warehouser text-red-600 hover:text-red-500" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
