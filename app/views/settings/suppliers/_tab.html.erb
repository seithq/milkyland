<% tab_links = [
  NavLink.new(path: suppliers_path, title: t("pages.suppliers"), is_active: true),
  NavLink.new(path: root_path, title: t("pages.clients"), is_active: false)
]
%>

<div>
  <div class="sm:hidden">
    <%= select_tag "tabs", options_for_select(tab_links.map { |link| [ link.title, link.path ] }, tab_links.select { |link| link.is_active == true }.first.path), data: { controller: "tab", action: "tab#redirect" }, class: "tab-select" %>
  </div>
  <div class="hidden sm:block">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <% tab_links.each do |link| %>
          <%= link_to link.title, link.path, class: "tab-link #{ "tab-link-active" if link.is_active }" %>
        <% end %>
      </nav>
    </div>
  </div>
</div>