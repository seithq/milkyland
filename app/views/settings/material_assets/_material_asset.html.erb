<div class="table-row">
  <div class="table-cell w-full max-w-0 py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:w-auto sm:max-w-none sm:pl-0">
    <%= link_to material_asset.category.name, category_path(material_asset.category) %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= link_to material_asset.name, material_asset_path(material_asset), class: "text-indigo-600" %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= link_to material_asset.supplier.name, supplier_path(material_asset.supplier), class: "text-indigo-600" %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= material_asset.article %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= number_to_currency material_asset.entry_price %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= material_asset.packing %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= material_asset.measurement.unit %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= material_asset.delivery_time_in_days %>
  </div>
  <div class="table-cell py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
    <%= link_to t("actions.edit_record"), edit_material_asset_path(material_asset), class: "text-indigo-600 hover:text-indigo-900" %>
  </div>
</div>