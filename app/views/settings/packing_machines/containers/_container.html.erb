<%= tag.div id: dom_id(container), class: "table-row hover:bg-gray-50" do %>
  <div class="table-cell whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6 <%= "line-through" unless container.active? %>">
    <%= container.material_asset.name %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= number_to_percentage container.losses_percentage, precision: 1 %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= container.performance %>
  </div>
  <% unless @readonly %>
    <div class="table-cell relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
      <div class="flex justify-end space-x-2">
        <%= link_to t("actions.edit_record"), edit_packing_machine_container_path(@packing_machine, container), data: { turbo_frame: "_top" }, class: "edit_container text-indigo-600 hover:text-indigo-900" %>
        <% if container.active? %>
          <%= link_to t("actions.destroy_record"), packing_machine_container_path(@packing_machine, container), data: { turbo_frame: "_top", turbo_method: :delete, turbo_confirm: t("actions.confirm") }, class: "destroy_container text-red-600 hover:text-red-500" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
