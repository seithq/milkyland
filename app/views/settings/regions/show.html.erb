<% content_for(:title) { @region.name } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: regions_path, title: t("pages.regions")),
      NavLink.new(path: region_path(@region), title: @region.name),
    ]
  } %>
<% end %>

<div class="flex flex-col justify-center px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= fields_for @region do |form| %>
      <div class="space-y-4">
        <div>
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, readonly: true, class: "form-input" %>
        </div>

        <div>
          <%= form.label :code, class: "form-label" %>
          <%= form.text_field :code, readonly: true, class: "form-input" %>
        </div>
      </div>
    <% end %>
  </div>
</div>