<% content_for(:title) { @custom_price.client.name } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: products_path, title: t("pages.products")),
      NavLink.new(path: edit_product_path(@product), title: @product.name),
      NavLink.new(path: edit_product_custom_price_path(@product, @custom_price), title: @custom_price.client.name)
    ]
  } %>
<% end %>

<%= render "form", custom_price: @custom_price %>
