<% content_for(:title) { t("pages.custom_prices") } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: products_path, title: t("pages.products")),
      NavLink.new(path: edit_product_path(@product), title: @product.name),
      NavLink.new(path: new_product_custom_price_path(@product), title: t("pages.custom_prices"))
    ]
  } %>
<% end %>

<%= render "form", custom_price: @custom_price %>
