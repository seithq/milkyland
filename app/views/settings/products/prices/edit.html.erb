<% content_for(:title) { @price.sales_channel.name } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: products_path, title: t("pages.products")),
      NavLink.new(path: edit_product_path(@product), title: @product.name),
      NavLink.new(path: edit_product_price_path(@product, @price), title: @price.sales_channel.name)
    ]
  } %>
<% end %>

<%= render "form", price: @price %>
