<% content_for(:title) { @ingredient.material_asset.name } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: groups_path, title: t("pages.groups")),
      NavLink.new(path: edit_group_path(@group), title: @group.name),
      NavLink.new(path: edit_group_ingredient_path(@group, @ingredient), title: @ingredient.material_asset.name)
    ]
  } %>
<% end %>

<%= render "form", ingredient: @ingredient %>
