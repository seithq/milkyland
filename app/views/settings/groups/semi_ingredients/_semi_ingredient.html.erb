<%= tag.div id: dom_id(semi_ingredient), class: "table-row hover:bg-gray-50" do %>
  <div class="table-cell whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6 <%= "line-through" unless semi_ingredient.active? %>">
    <%= semi_ingredient.semi_product.name %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= semi_ingredient.ratio %>
  </div>
  <div class="table-cell whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= semi_ingredient.semi_product.measurement.unit %>
  </div>
  <% unless @readonly %>
    <div class="table-cell relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
      <div class="flex justify-end space-x-2">
        <%= link_to t("actions.edit_record"), edit_group_semi_ingredient_path(@group, semi_ingredient), data: { turbo_frame: "_top" }, class: "edit_semi_ingredient text-indigo-600 hover:text-indigo-900" %>
        <% if semi_ingredient.active? %>
          <%= link_to t("actions.destroy_record"), group_semi_ingredient_path(@group, semi_ingredient), data: { turbo_frame: "_top", turbo_method: :delete, turbo_confirm: t("actions.confirm") }, class: "destroy_semi_ingredient text-red-600 hover:text-red-500" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
