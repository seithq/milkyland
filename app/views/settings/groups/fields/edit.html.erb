<% content_for(:title) { @field.name } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: groups_path, title: t("pages.groups")),
      NavLink.new(path: edit_group_path(@group), title: @group.name),
      NavLink.new(path: edit_group_field_path(@group, @field), title: @field.name)
    ]
  } %>
<% end %>

<%= render "form", field: @field %>
