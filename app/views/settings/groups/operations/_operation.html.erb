<%= tag.div id: dom_id(operation), class: "table-row hover:bg-gray-50" do %>
  <div class="table-cell whitespace-nowrap py-4 pl-4 pr-3 text-sm font-semibold text-gray-900 sm:pl-6 <%= "line-through" unless operation.active? %>">
    <%= operation.name %>
  </div>
  <div class="table-cell px-3 py-3.5 text-left text-sm font-medium text-gray-900 <%= "line-through" unless operation.journal.active? %>">
    <%= operation.journal.name %>
  </div>
  <% unless @readonly %>
    <div class="table-cell relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
      <div class="flex justify-end space-x-2">
        <%= link_to t("actions.edit_record"), edit_group_operation_path(@group, operation), data: { turbo_frame: "_top" }, class: "edit_operation text-indigo-600 hover:text-indigo-900" %>
        <% if operation.active? %>
          <%= link_to t("actions.destroy_record"), group_operation_path(@group, operation), data: { turbo_frame: "_top", turbo_method: :delete, turbo_confirm: t("actions.confirm") }, class: "destroy_operation text-red-600 hover:text-red-500" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
