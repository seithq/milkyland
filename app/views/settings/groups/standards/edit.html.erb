<% content_for(:title) { @standard.name } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: groups_path, title: t("pages.groups")),
      NavLink.new(path: edit_group_path(@group), title: @group.name),
      NavLink.new(path: edit_group_standard_path(@group, @standard), title: @standard.name)
    ]
  } %>
<% end %>

<%= render "form", standard: @standard %>
