<% content_for(:title) { @journal.name } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: groups_path, title: t("pages.groups")),
      NavLink.new(path: edit_group_path(@group), title: @group.name),
      NavLink.new(path: edit_group_journal_path(@group, @journal), title: @journal.name)
    ]
  } %>
<% end %>

<%= render "form", journal: @journal %>
