<div class="table-row">
  <div class="table-cell w-full max-w-0 py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:w-auto sm:max-w-none sm:pl-0">
    <%= link_to promotion.name, promotion_path(promotion), class: "text-indigo-600" %>
  </div>
  <div class="table-cell px-3 py-4 text-sm"><%= promotion_status promotion %></div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500"><%= Promotion.enum_to_s(:kind, promotion.kind) %></div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500"><%= number_to_human promotion.discount %></div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500"><%= time_tag promotion.start_date if promotion.start_date? %></div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500"><%= time_tag promotion.end_date if promotion.end_date? %></div>
  <div class="table-cell py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
    <%= link_to t("actions.edit_record"), edit_promotion_path(promotion), class: "text-indigo-600 hover:text-indigo-900" %>
  </div>
</div>
