<% content_for(:title) { @discounted_product.product.name } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: promotions_path, title: t("pages.promotions")),
      NavLink.new(path: edit_promotion_path(@promotion), title: @promotion.name),
      NavLink.new(path: edit_promotion_discounted_product_path(@promotion, @discounted_product), title: @discounted_product.product.name)
    ]
  } %>
<% end %>

<%= render "form", discounted_product: @discounted_product %>
