<% content_for(:title) { @participant.client.name } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: promotions_path, title: t("pages.promotions")),
      NavLink.new(path: edit_promotion_path(@promotion), title: @promotion.name),
      NavLink.new(path: edit_promotion_participant_path(@promotion, @participant), title: @participant.client.name)
    ]
  } %>
<% end %>

<%= render "form", participant: @participant %>
