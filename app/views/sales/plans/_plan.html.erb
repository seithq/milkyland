<div class="table-row">
  <div class="table-cell w-full max-w-0 py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:w-auto sm:max-w-none sm:pl-0">
    <%= link_to l(plan.production_date), plan_path(plan), class: "text-indigo-600" %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= plan.orders.count %>
  </div>
  <div class="table-cell px-3 py-4 text-sm text-gray-500">
    <%= plan.groups.uniq.count %>
  </div>
  <div class="table-cell py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
    <% if plan.can_edit? %>
      <%= link_to t("actions.edit_record"), edit_plan_path(plan), class: "text-indigo-600 hover:text-indigo-900" %>
    <% else %>
      <%= link_to t("actions.show_record"), plan_path(plan), class: "text-indigo-600 hover:text-indigo-900" %>
    <% end %>
  </div>
</div>