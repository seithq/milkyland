<% tab_links = [
  NavLink.new(path: plans_path(status: :in_consolidation), title: t("pages.status_in_consolidation"), is_active: @status == "in_consolidation"),
  NavLink.new(path: plans_path(status: :in_production), title: t("pages.status_in_production"), is_active: @status == "in_production"),
  NavLink.new(path: plans_path(status: :produced), title: t("pages.status_produced"), is_active: @status == "produced"),
  NavLink.new(path: plans_path(status: :cancelled), title: t("pages.status_cancelled"), is_active: @status == "cancelled"),
]
%>

<div>
  <div class="sm:hidden">
    <%= mobile_tab_select tab_links %>
  </div>
  <div class="hidden sm:block">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <% tab_links.each do |link| %>
          <%= link_to link.title, link.path, class: "tab-link #{ "tab-link-active" if link.is_active }" %>
        <% end %>
      </nav>
    </div>
  </div>
</div>