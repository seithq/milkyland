<% content_for(:title) { t("pages.orders_by_channel", channel: @sales_channel.name) } %>

<% content_for :breadcrumb do %>
  <%= render "layouts/breadcrumb", {
    nav_links: [
      NavLink.new(path: sales_channel_orders_path(@sales_channel), title: t("pages.orders_by_channel", channel: @sales_channel.name))
    ]
  } %>
<% end %>



<div class="px-4 sm:px-6 lg:px-8">
  <%= render "tab" %>
  <div class="sm:mt-8 sm:flex sm:items-center">
    <%= render "search" %>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to new_sales_channel_order_path(@sales_channel), class: "btn-create" do %>
        <%= inline_svg_tag "plus.svg", class: "h-5 w-5" %>
        <%= t("actions.create_record") %>
      <% end %>
    </div>
  </div>
  <div class="-mx-4 mt-4 sm:mt-8 sm:-mx-0">
    <div class="table border-collapse min-w-full divide-y divide-gray-300">
      <div class="table-header-group">
        <div class="table-row">
          <div class="table-cell py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">
            <%= t("tables.cols.number") %>
          </div>
          <div class="hidden lg:table-cell px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
            <%= t("tables.cols.client") %>
          </div>
          <div class="hidden sm:table-cell px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
            <%= t("tables.cols.sales_point") %>
          </div>
          <div class="table-cell px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
            <%= t("tables.cols.order_sum") %>
          </div>
          <div class="table-cell px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
            <%= t("tables.cols.preferred_date") %>
          </div>
          <div class="table-cell px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
            <%= t("tables.cols.manager") %>
          </div>
          <div class="table-cell relative py-3.5 pl-3 pr-4 sm:pr-0"></div>
        </div>
      </div>
      <div class="table-row-group border-collapse divide-y divide-gray-200 bg-white">
        <%= render @orders %>
      </div>
    </div>
    <%== pagy_nav(@pagy) %>
  </div>
</div>
