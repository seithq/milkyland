<% content_for(:title) { "Set up Account" } %>

<%= form_with model: @user, url: first_run_path do |form| %>
  <div>
    <%= form.text_field :name, required: true, autofocus: true, autocomplete: "name", placeholder: "Enter your full name" %>
  </div>

  <div>
    <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email_address", placeholder: "Enter your email address" %>
  </div>

  <div>
    <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72 %>
  </div>

  <%= form.submit "Create your account" %>
<% end %>