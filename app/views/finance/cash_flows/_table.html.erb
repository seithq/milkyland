<div class="flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <div class="overflow-hidden shadow-sm sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6"></th>
            <% report_periods.each do |period| %>
              <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= l(period.first, format: "cash_flow_#{ @trunc_period }".to_sym) %></th>
            <% end %>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= Transaction.human_attribute_name(:total_amount) %></th>
          </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
          <% hierarchical_data.each do |activity_type, activity_group| %>
            <!-- Итог для activity_type -->
            <tr>
              <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm uppercase font-medium text-gray-400 sm:pl-6"><%= activity_type %></td>
              <% report_periods.each do |period, _| %>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <%= number_to_currency(activity_group[:totals][period] || 0) %>
                </td>
              <% end %>
              <td class="whitespace-nowrap px-3 py-4 font-semibold text-sm text-gray-700">
                <%= number_to_currency(activity_group[:totals].values.sum) %>
              </td>
            </tr>

            <% activity_group[:kinds].each do |kind, kind_group| %>
              <!-- Итог для kind -->
              <% kind_id = SecureRandom.hex(8) %>
              <tr data-controller="cascade" data-cascade-open-value="false" data-cascade-id-value="<%= kind_id %>">
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-semibold text-gray-900 sm:pl-6">
                  <button type="button" data-action="cascade#toggle" class="flex w-full items-start justify-start space-x-2">
                    <span class="flex h-7 items-center">
                      <%= inline_svg_tag "plus-sm.svg", class: "h-6 w-6", data: { cascade_target: "opener" } %>
                      <%= inline_svg_tag "minus-sm.svg", class: "hidden h-6 w-6", data: { cascade_target: "closer" } %>
                    </span>
                    <span class="ml-6 text-base font-semibold leading-7"><%= Transaction.enum_to_s(:kind, kind) %></span>
                  </button>
                </td>
                <% report_periods.each do |period, _| %>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= number_to_currency(kind_group[:totals][period] || 0) %>
                  </td>
                <% end %>
                <td class="whitespace-nowrap px-3 py-4 font-semibold text-sm text-gray-700">
                  <%= number_to_currency(kind_group[:totals].values.sum) %>
                </td>
              </tr>

              <% kind_group[:categories].each do |category, category_group| %>
                <!-- Итог для financial_category -->
                <% category_id = SecureRandom.hex(8) %>
                <tr data-id="<%= kind_id %>" class="hidden" data-controller="cascade" data-cascade-open-value="false" data-cascade-id-value="<%= category_id %>">
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-600 sm:pl-6">
                    <button type="button" data-action="cascade#toggle" class="flex w-full items-start justify-start space-x-2">
                      <span class="flex h-7 items-center">
                        <%= inline_svg_tag "plus-sm.svg", class: "h-6 w-6", data: { cascade_target: "opener" } %>
                        <%= inline_svg_tag "minus-sm.svg", class: "hidden h-6 w-6", data: { cascade_target: "closer" } %>
                      </span>
                      <span class="ml-6 text-sm font-medium leading-7"><%= category %></span>
                    </button>
                  </td>
                  <% report_periods.each do |period, _| %>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                      <%= number_to_currency(category_group[:totals][period] || 0) %>
                    </td>
                  <% end %>
                  <td class="whitespace-nowrap px-3 py-4 font-semibold text-sm text-gray-700">
                    <%= number_to_currency(category_group[:totals].values.sum) %>
                  </td>
                </tr>

                <% category_group[:articles].each do |article, article_group| %>
                  <!-- Статья -->
                  <tr data-id="<%= category_id %>" class="hidden">
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-400 sm:pl-6"><%= article %></td>
                    <% report_periods.each do |period, _| %>
                      <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                        <%= number_to_currency(article_group[period] || 0) %>
                      </td>
                    <% end %>
                    <td class="whitespace-nowrap px-3 py-4 font-semibold text-sm text-gray-700">
                      <%= number_to_currency(article_group.values.compact.sum) %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
          <tr>
            <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"></td>
            <% report_periods.each do |_, total_amount| %>
              <td class="whitespace-nowrap px-3 py-4 font-bold text-sm">
                <%= number_to_currency total_amount %>
              </td>
            <% end %>
            <td class="whitespace-nowrap px-3 py-4 font-bold text-sm">
              <%= number_to_currency hierarchical_data.values.sum { |entry| entry[:totals].values.sum } %>
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
